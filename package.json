    "babel-core": "^6.11.4",
    "babel-eslint": "^6.0.2",
    "babel-loader": "^6.2.4",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-react": "^6.5.0",
    "babel-register": "^6.7.2",
    "chai": "^3.5.0",
    "css-loader": "^0.11.0",
    "enzyme": "^2.0.0",
    "eslint": "^2.7.0",
    "eslint-config-airbnb": "^6.2.0",
    "eslint-plugin-react": "^4.3.0",
    "gulp": "^3.8.11",
    "gulp-shell": "^0.4.1",
    "gulp-util": "^3.0.4",
    "ignore-styles": "^4.0.0",
    "jsdom": "^9.4.1",
