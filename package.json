    "node-sass": "^3.2.0",
    "nyc": "^6.4.0",
    "react": "^15.1.0",
    "react-addons-test-utils": "^15.2.1",
    "react-dom": "^15.1.0",
    "react-hot-loader": "^1.2.5",
    "react-redux": "^4.4.5",
    "react-router": "^2.4.1",
    "react-router-redux": "^4.0.5",
    "redux": "^3.5.2",
    "redux-socket.io": "^1.2.0",
    "sass-loader": "^3.1.1",
    "sinon": "^1.17.3",
    "sinon-chai": "^2.8.0",
